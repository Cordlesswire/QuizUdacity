<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    style="@style/CardMainStyle">
    <LinearLayout
        style="@style/CardMainLayoutStyle">
        <LinearLayout
            style="@style/CardHeadLayoutStyle">
            <TextView
                style="@style/CardQuestionStyle"
                android:text="@string/question2"
                android:onClick="question2"/>
            <ImageView
                android:id="@+id/btn_question_2"
                style="@style/CardQuestionButtonStyle"
                android:onClick="question2"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
        </LinearLayout>
        <LinearLayout
            style="@style/CardBodyStyle"
            android:id="@+id/body_question_2">
            <EditText
                android:id="@+id/edit_question_2"
                style="@style/CardAnswerEditStyle"
                android:hint="hkanjih@gmail.com"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>